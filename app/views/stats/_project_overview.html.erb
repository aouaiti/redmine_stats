<div class="stats-overview box">
  <h3><%= l(:label_quick_stats) %></h3>
  
  <div class="stats-mini">
    <div class="health-score">
      <div class="gauge-mini" data-score="<%= RedmineStats::Utils::StatsCalculator.calculate_project_health_score(project) %>">
        <div class="gauge-mini-value"><%= RedmineStats::Utils::StatsCalculator.calculate_project_health_score(project) %></div>
      </div>
      <p><%= l(:label_health_score) %></p>
    </div>
    
    <div class="stats-counts">
      <p>
        <span class="count"><%= project.issues.open.count %></span>
        <span class="label"><%= l(:label_open_issues) %></span>
      </p>
      <p>
        <span class="count"><%= project.issues.where.not(closed_on: nil).count %></span>
        <span class="label"><%= l(:label_closed_issues) %></span>
      </p>
      <% completion_rate = project.issues.count > 0 ? (project.issues.where.not(closed_on: nil).count.to_f / project.issues.count * 100).round : 0 %>
      <div class="progress-bar <%= completion_rate >= 70 ? 'progress-bar-green' : (completion_rate >= 40 ? 'progress-bar-yellow' : 'progress-bar-red') %>">
        <div class="progress-bar-value" style="width: <%= completion_rate %>%;"></div>
      </div>
      <p class="completion-rate">
        <%= l(:label_completion_rate) %>: <strong><%= completion_rate %>%</strong>
      </p>
    </div>
  </div>
  
  <div class="stats-footer">
    <%= link_to l(:label_view_stats), project_stats_path(project), class: 'icon icon-stats' %>
  </div>
</div>

<style>
  .stats-overview {
    margin-bottom: 20px;
  }
  
  .stats-mini {
    display: flex;
    margin: 10px 0;
  }
  
  .health-score {
    width: 80px;
    text-align: center;
    margin-right: 15px;
  }
  
  .gauge-mini {
    width: 60px;
    height: 30px;
    position: relative;
    margin: 0 auto;
    border-bottom-left-radius: 60px;
    border-bottom-right-radius: 60px;
    overflow: hidden;
    background-color: #f5f5f5;
  }
  
  .gauge-mini:before {
    content: '';
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, #FF6384 0%, #FFCE56 50%, #4BC0C0 100%);
    z-index: 1;
  }
  
  .gauge-mini-value {
    font-size: 14px;
    font-weight: bold;
    position: absolute;
    bottom: 3px;
    width: 100%;
    text-align: center;
    z-index: 2;
  }
  
  .stats-counts {
    flex: 1;
  }
  
  .stats-counts .count {
    font-weight: bold;
    font-size: 16px;
    margin-right: 5px;
  }
  
  .stats-counts .label {
    color: #666;
  }
  
  .stats-counts p {
    margin: 3px 0;
  }
  
  .completion-rate {
    font-size: 12px;
    margin-top: 2px !important;
    text-align: right;
  }
  
  .stats-footer {
    margin-top: 10px;
    text-align: right;
    border-top: 1px solid #eee;
    padding-top: 5px;
  }
</style> 